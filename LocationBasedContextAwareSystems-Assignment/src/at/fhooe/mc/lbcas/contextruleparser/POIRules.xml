<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<rule>
		<ruleId>1</ruleId>
	    <rulename>RestaurantPOI</rulename>
	    <rulecondition>time_now == 12.00 PM || time_now == 9.00 PM</rulecondition>
        <methodName>updatePOIs</methodName>
        <parameter>at.fhooe.mc.lbcas.component.poicomponent.RestaurantPOI</parameter>
	</rule>	
	<rule>
		<ruleId>2</ruleId>
	    <rulename>OfficePOI</rulename>
	    <rulecondition>time_now > 08.00 AM && time_now < 10.00 AM</rulecondition>
        <methodName>updatePOIs</methodName>
        <parameter>at.fhooe.mc.lbcas.component.poicomponent.OfficePOI</parameter>
	</rule>	
	<rule>
		<ruleId>3</ruleId>
	    <rulename>HomePOI</rulename>
	    <condition>time_now > 06.00 PM && time_now < 08.00 PM</condition>
        <methodName>updatePOIs</methodName>
        <parameter>at.fhooe.mc.lbcas.component.poicomponent.HomePOI</parameter>
	</rule>
</rules>